@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="card">
<h1>Сообщения</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gonderen</th>
        <th>Tarih</th>
        <th>Mesaji Ac</th>
     
    @foreach(var item in Model){
    <tr>
        <th>@item.MessageID</th>
        <td>@item.Subject</td>
        <td>@item.SenderUser.WriterName</td>
        <td>@item.MessageDate</td>
        <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning" >Редактировать</a></td>
      </tr>
    }
</table>
</div>
<br />
<a href="/Blog/BlogAdd" class="btn btn-primary">Cоздать новый блог</a>

