@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/admin/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/admin/css/animate.css" rel="stylesheet">
    <link href="~/admin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h3 class="logo-name">IN+</h3>

            </div>
            <h3>Регистрация</h3>
            <div class="text-danger" asp-validation-summary="ModelOnly" >

                </div>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.nameSurname" class="text-danger"></span>
                    <input type="text" asp-for="@Model.nameSurname" class="form-control" placeholder="Имя" >
                </div>
                <div class="form-group">
                      <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" asp-for="@Model.Mail" class="form-control" placeholder="Email" >
                </div>
                <div class="form-group">
                      <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input type="text" asp-for="@Model.UserName" class="form-control" placeholder="Краткая имя" >
                </div>
                <div class="form-group"> 
                      <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Password" >
                </div>
                <div class="form-group">
                      <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Password" >
                </div>
                <div class="form-group">
                        <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Регистрация</button>

                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">Вход</a>
                
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/admin/js/jquery-3.1.1.min.js"></script>
    <script src="~/admin/js/popper.min.js"></script>
    <script src="~/admin/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/admin/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>

