@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<div class="card">
<h1>Авторские блоги</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Заголовка</th>
        <th>Дата создания</th>
        <th>Категория</th>
        <th>Саттус</th>
        <th>Изменить</th>
        <th>Удалить</th>
    </tr>
    @foreach(var item in Model){
    <tr>
        <th>@item.BlogID</th>
        <td>@item.BlogTitle</td>
        <td>@item.BlogCreateDate</td>
        <td>@item.Category.CategoryName</td>
        <td>@item.BlogStatus</td>
        <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning" >Редактировать</a></td>
        <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger" >Удалить</a></td>
        
    </tr>
    }
</table>
</div>
<br />
<a href="/Blog/BlogAdd" class="btn btn-primary">Cоздать новый блог</a>
